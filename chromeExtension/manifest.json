{
  "manifest_version": 2,
  "name": "Bookmark Bar",
  "version": "1.0",
  "icons":{ "16": "icon_16.png",
           "48": "icon_48.png",
          "128": "icon_128.png" },
  "browser_action":{
    "default_icon": "icon_48.png",
    "default_popup": "popup.html"
  },
  "background":{
    "scripts":["event.js"],
    "persistent": false
  },
  "content_scripts":[
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tts","notifications","contextMenus","tabs","activeTab"]
}
